<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- State when selected -->
    <item android:state_checked="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/profile_card_background" />
            <corners android:radius="16dp" />
            <stroke android:width="2dp" android:color="@color/profile_icon_accent" />
        </shape>
    </item>
    <!-- Default state -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/profile_card_background" />
            <corners android:radius="16dp" />
            <stroke android:width="1dp" android:color="@color/edit_profile_border_default" />
        </shape>
    </item>
</selector>