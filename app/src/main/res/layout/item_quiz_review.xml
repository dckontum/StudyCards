<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginVertical="8dp"
    app:cardBackgroundColor="#2C2A3C"
    app:cardCornerRadius="12dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:id="@+id/review_question_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#B3A5F7"
            android:textSize="14sp"
            android:textStyle="bold"
            tools:text="Question 3" />

        <TextView
            android:id="@+id/review_question_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:textColor="@android:color/white"
            android:textSize="18sp"
            tools:text="What is the chemical symbol for Gold?" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#49454F"
            android:layout_marginTop="16dp"/>

        <!-- Your Answer -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="16dp"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/review_your_answer_icon"
                android:layout_width="24dp"
                android:layout_height="24dp"
                tools:src="@drawable/ic_close"
                app:tint="#F2B8B5" />

            <TextView
                android:id="@+id/review_your_answer_text"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="#E6E0E9"
                android:textSize="16sp"
                android:layout_marginStart="12dp"
                tools:text="Ag" />

        </LinearLayout>

        <!-- Correct Answer -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="8dp"
            android:gravity="center_vertical">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_check"
                app:tint="#A5D6A7" />

            <TextView
                android:id="@+id/review_correct_answer_text"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="#E6E0E9"
                android:textSize="16sp"
                android:layout_marginStart="12dp"
                tools:text="Au" />

        </LinearLayout>

    </LinearLayout>
</com.google.android.material.card.MaterialCardView>