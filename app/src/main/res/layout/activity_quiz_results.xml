<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1C1B1F"
    android:padding="16dp"
    tools:context=".ui.quiz.QuizResultsActivity">

    <!-- Centered Content -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerInParent="true"
        android:gravity="center_horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Quiz Complete!"
            android:textColor="@android:color/white"
            android:textSize="32sp"
            android:textStyle="bold"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Here's your score:"
            android:textColor="#C9C5D5"
            android:textSize="18sp"
            android:layout_marginTop="8dp"/>

        <TextView
            android:id="@+id/quiz_score_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/white"
            android:textSize="60sp"
            android:textStyle="bold"
            android:layout_marginTop="24dp"
            tools:text="8/10" />

    </LinearLayout>

    <!-- Bottom Actions -->
    <LinearLayout
        android:id="@+id/results_bottom_actions"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_alignParentBottom="true">

        <Button
            android:id="@+id/review_answers_button"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="Review Answers"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            app:strokeColor="#B3A5F7"
            android:textColor="#B3A5F7"
            android:layout_marginBottom="8dp"/>

        <Button
            android:id="@+id/done_button"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="Done"
            android:background="@drawable/button_gradient"
            android:textColor="@android:color/white"
            app:backgroundTint="@null"/>
    </LinearLayout>

</RelativeLayout>
