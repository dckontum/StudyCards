<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.MyApplication">

        <!-- Auth Activities -->
        <activity
            android:name=".ui.auth.SplashActivity"
            android:exported="true"
            android:theme="@style/Theme.StudyCards">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.auth.LoginActivity"
            android:exported="false"
            android:theme="@style/Theme.StudyCards"/>
        <activity
            android:name=".ui.auth.RegisterActivity"
            android:exported="false"
            android:theme="@style/Theme.StudyCards" />

        <!-- Deck Activities -->
        <activity
            android:name=".ui.deck.MainActivity"
            android:exported="true" />
        <activity
            android:name=".ui.deck.DeckDetailActivity"
            android:exported="false" />
        <activity
            android:name=".ui.deck.AddDeckActivity"
            android:exported="false"
            android:theme="@style/Theme.StudyCards" />
        <activity
            android:name=".ui.deck.EditDeckActivity"
            android:exported="false"
            android:theme="@style/Theme.StudyCards" />

        <!-- Flashcard Activities -->
        <activity
            android:name=".ui.flashcard.AddFlashcardsActivity"
            android:exported="false" />
        <activity
            android:name=".ui.flashcard.EditFlashcardActivity"
            android:exported="false" />

        <!-- Study & Quiz Activities -->
        <activity
            android:name=".ui.study.StudyDeckActivity"
            android:exported="false" />
        <activity
            android:name=".ui.quiz.QuizActivity"
            android:exported="false" />
<!--        <activity-->
<!--            android.name=".ui.quiz.QuizResultsActivity"-->
<!--            android:exported="false" />-->
        <activity
            android:name=".ui.quiz.ReviewQuizActivity"
            android:exported="false" />

        <!-- Other Main-level Activities -->
        <activity
            android:name=".ui.favorite.FavoritesActivity"
            android:exported="false" />
        <activity
            android:name=".ui.profile.ProfileActivity"
            android:exported="false" />
        <activity
            android:name=".ui.profile.EditProfileActivity"
            android:exported="false" />
        <activity
            android:name=".ui.profile.ChangePasswordActivity"
            android:exported="false" />

    </application>

</manifest>
